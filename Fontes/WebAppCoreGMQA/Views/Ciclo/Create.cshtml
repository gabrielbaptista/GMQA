@model WebAppCoreGMQA.ViewModels.Ciclo.CicloViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" id="Create">
    <div class="form-horizontal">
        <h4>CicloViewModel</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="DataInicio" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="date" asp-for="DataInicio" class="form-control" placeholder="DD/MM/YYYY" />
                <span asp-validation-for="DataInicio" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DataFim" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="date" asp-for="DataFim" class="form-control" placeholder="DD/MM/YYYY" />
                <span asp-validation-for="DataFim" class="text-danger" />
            </div>
            <span id="erroData" style="padding-left:15px;" hidden class="text-danger">Data fim é menor que data de inicio.</span>

        </div>

        <div class="form-group">
            <label asp-for="FaseCiclo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FaseCiclo" class="form-control" />
                <span asp-validation-for="FaseCiclo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NumeroCiclo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NumeroCiclo" class="form-control" />
                <span asp-validation-for="NumeroCiclo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label style="margin-top:20px" asp-for="IdProjeto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownListFor(a => a.IdProjeto, new SelectList(ViewBag.IdProjeto, "IdProjeto", "Nome"), "Selecione", new { @class = "form-control", @style = "margin-top:20px; width: 170px;" })
                <span asp-validation-for="IdProjeto" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label style="margin-top:20px" asp-for="IdEtapas" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownListFor(a => a.IdEtapas, new SelectList(ViewBag.IdEtapa, "IdEtapas", "Descricao"), "Selecione", new { @class = "form-control", @style = "margin-top:20px; width: 170px;" })
                <span asp-validation-for="IdEtapas" class="text-danger" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" onclick="validar()" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function validar() {
            debugger;
            var dataInicio = $('#DataInicio').val();
            var dataFim = $('#DataFim').val();

            if (dataInicio <= dataFim) {
                $("#Create").submit();
            }
            else {
                //alert("Data fim maior que data inicio");
                $("#erroData").show();
            }
        }
    </script>
}
